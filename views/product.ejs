<div class="container-fluid">
  <div class="row">
    <% products.forEach(function( product) { %>
    <div class="col-3">
        <div class="mt-3">
          <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="<%= product.image %>" style="height: 12rem;" alt="Card image">
            <div class="card-body">
              <h4 class="card-text text-uppercase"><%= product.title %></h4>
              <p class="card-text text-capitalize"><%= product.description %></p>
              <h6 class="font-weight-bold"> &#8377 : <%= product.price %></h6>
            </div>
            <div class="card-body">
              <a href="products/<%= product._id %>" class="btn btn-success">Buy Now</a>
              <a href="#" class="btn btn-outline-success">Add to Cart</a>
            </div>
          </div> 
        </div> 
    </div>
    <% }) %>
  </div>
  
</div>