<div class="container">
    <div class="row">
        <div class="col-7 mx-auto my-5">
          <form action="/admin" method="POST"> 
                <div class="form-group">
                  <label for="title">Product Title</label>
                  <input 
                    type="name " 
                    class="form-control" 
                    id="title" 
                    name="title" 
                    placeholder="Enter Product Title"
                    />
                </div>
                <div class="form-group">
                  <label for="description">Product Description</label>
                  <input 
                    type="name " 
                    class="form-control" 
                    id="description" 
                    name="description" 
                    placeholder="Product Description"
                     />
                </div>
                <div class="form-group">
                  <label for="description">Image Link</label>
                  <input type="name" 
                    class="form-control" 
                    id="image" 
                    name="image" 
                    placeholder="Image Link" 
                     />
                </div>
                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label for="description">Category</label>
                      <input type="name " 
                        class="form-control" 
                        id="category" 
                        name="category" 
                        placeholder="Product Category"
                         />
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-group">
                      <label for="description">Price</label>
                      <input type="text " 
                        class="form-control" 
                        id="price" 
                        name="price" 
                        placeholder="Product Price"
                          /> 
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
              </form>
        </div>
    </div>
</div>

<div class="container-fluid">
  <div class="row">
    <% products.forEach(function( product) { %>
    <div class="col-3">
        <div class="mt-3">
          <div class="card" style="width: 20rem;">
            
            <div class="card-body">
              <h5 class="card-text text-uppercase"><%= product.title %></h5>
              
            </div>
            <div class="card-body">
              <button type="button" 
                      class="btn btn-danger"
                      onclick="doDelete(
                        '<%= product._id %>,<%= product.title %>,<%= product.image %>, <%= product.description%>,<%= product.price%>,<%= product.category %>')"
                      >Delete</button>
              
            </div>
          </div> 
        </div> 
    </div>
    <% }) %>
  </div>
</div>
